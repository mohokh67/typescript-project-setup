{
  "name": "typescript-project-setup",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "wireit",
    "lint": "wireit",
    "prepare": "wireit",
    "test": "wireit",
    "clean": "wireit",
    "clean:deep": "wireit"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-angular": "^17.4.2",
    "husky": "^8.0.3",
    "rimraf": "^4.1.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "wireit": "^0.9.3"
  },
  "wireit": {
    "build": {
      "command": "tsup src/**/*.ts --format cjs,esm --dts",
      "dependencies": [
        "lint"
      ]
    },
    "lint": {
      "command": "tsc"
    },
    "prepare": {
      "command": "husky install"
    },
    "test": {
      "command": "echo 'running tests...'"
    },
    "clean": {
      "command": "rimraf dist"
    },
    "clean:deep": {
      "command": "rimraf node_modules .wireit",
      "dependencies": [
        "clean"
      ]
    }
  },
  "packageManager": "pnpm@7.0.0"
}
